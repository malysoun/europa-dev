{
  "builders": [
    {
      "iso_checksum_type": "md5",
      "headless": true,
      "boot_command": [
        "<tab> linux text biosdevname=0 ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><enter><wait>"
      ],
      "ssh_username": "zendev",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "4"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--hwvirtex",
          "on"
        ]
      ],
      "http_directory": "http",
      "boot_wait": "10s",
      "ssh_port": 22,
      "guest_os_type": "Fedora_64",
      "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'zendev'|sudo -S sh 'shutdown.sh'",
      "iso_checksum": "17d5c860bf9dc83e035882a7b33ffc77",
      "type": "virtualbox",
      "virtualbox_version_file": ".vbox_version",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "ssh_password": "zendev",
      "disk_size": 10140,
      "ssh_wait_timeout": "10000s",
      "iso_url": "http://mirrors.kernel.org/fedora/releases/18/Fedora/x86_64/iso/Fedora-18-x86_64-DVD.iso"
    }
  ],
  "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/ruby.sh",
        "scripts/chef.sh",
        "scripts/zenoss-dependencies.sh",
        "scripts/devtools.sh",
        "scripts/vagrant.sh",
        "scripts/virtualbox.sh",
        "scripts/cleanup.sh",
        "scripts/zerodisk.sh"
      ],
      "type": "shell",
      "override": {
        "virtualbox": {
          "execute_command": "echo 'zendev'|sudo -S sh '{{.Path}}'"
        }
      }
    }
  ],
  "post-processors": [
      {
       "type": "vagrant",
       "output": "europa_F18_x86_64_{{.Provider}}.box"
      }
  ]
}
